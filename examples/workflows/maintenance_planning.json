  "spec": {
    "id": "maintenance_planning",
    "version": "0.6.0",
    "category": "operations",
    "description": "Plan long-term system upkeep.\nThis workflow guides technical debt identification, prioritization, and maintenance scheduling for sustainable system health.\n",
    "phases": [
      {
        "id": "debt_identification",
        "description": "Identify technical debt and maintenance needs",
        "requires": [
          "system_state",
          "quality_metrics"
        ],
        "produces": [
          "debt_inventory"
        ],
        "allows_questions": true,
        "risk_level": "medium"
      },
      {
        "id": "prioritization",
        "description": "Prioritize maintenance items by impact and urgency",
        "requires": [
          "debt_inventory"
        ],
        "produces": [
          "prioritized_backlog"
        ],
        "allows_questions": false,
        "risk_level": "low"
      },
      {
        "id": "maintenance_schedule",
        "description": "Create maintenance schedule and resource plan",
        "requires": [
          "prioritized_backlog"
        ],
        "produces": [
          "maintenance_roadmap"
        ],
        "allows_questions": false,
        "risk_level": "low"
      }
    ],
    "interaction": {
      "default_mode": "question_only",
      "question_policy": {
        "trigger_when": [
          "debt_assessment_unclear",
          "hidden_dependencies_suspected"
        ]
      },
      "allowed_phases": [
        "debt_identification"
      ]
    },
    "constraints": {
      "execution": "forbidden",
      "side_effects": "forbidden",
      "requires_approval": false
    },
    "lineage": {
      "introduced_in": "v0.6",
      "derived_from": null,
      "change_reason": null
    },
    "metadata": {
      "tags": [
        "maintenance",
        "technical-debt",
        "planning"
      ],
      "related_workflows": [
        "refactoring",
        "architectural_evolution"
      ],
      "use_cases": [
        "Quarterly maintenance planning",
        "Technical debt reduction initiatives",
        "System health improvement programs"
      ],
      "anti_use_cases": [
        "Emergency fixes (use incident_response)",
        "Major architectural changes (use architectural_evolution)",
        "Feature development"
      ]
    }
  }
}