  "spec": {
    "id": "security_review",
    "version": "0.6.0",
    "category": "governance",
    "description": "Identify security risks and mitigations.\nThis workflow focuses specifically on security concerns, including threat modeling, vulnerability analysis, and mitigation planning.\n",
    "phases": [
      {
        "id": "threat_modeling",
        "description": "Identify potential threats",
        "requires": [
          "feature",
          "architecture"
        ],
        "produces": [
          "threat_model"
        ],
        "allows_questions": true,
        "risk_level": "high"
      },
      {
        "id": "vulnerability_analysis",
        "description": "Analyze for known vulnerability patterns",
        "requires": [
          "code",
          "dependencies"
        ],
        "produces": [
          "vulnerability_report"
        ],
        "allows_questions": false,
        "risk_level": "high"
      },
      {
        "id": "mitigation_plan",
        "description": "Create mitigation plan for identified risks",
        "requires": [
          "threat_model",
          "vulnerability_report"
        ],
        "produces": [
          "mitigation_plan"
        ],
        "allows_questions": false,
        "risk_level": "high"
      }
    ],
    "interaction": {
      "default_mode": "question_only",
      "question_policy": {
        "trigger_when": [
          "critical_vulnerability_found",
          "threat_severity == \"high\"",
          "compliance_requirement_unclear"
        ]
      },
      "allowed_phases": [
        "threat_modeling"
      ]
    },
    "constraints": {
      "execution": "forbidden",
      "side_effects": "forbidden",
      "requires_approval": false
    },
    "lineage": {
      "introduced_in": "v0.6",
      "derived_from": null,
      "change_reason": null
    },
    "metadata": {
      "tags": [
        "security",
        "compliance",
        "risk-management"
      ],
      "related_workflows": [
        "code_review",
        "deployment_planning"
      ],
      "use_cases": [
        "Security-sensitive features",
        "Compliance requirements (PCI, HIPAA, GDPR, etc.)",
        "External API integrations"
      ],
      "anti_use_cases": [
        "General code review (use code_review)",
        "Performance issues",
        "Non-security refactoring"
      ]
    }
  }
