  "spec": {
    "id": "performance_analysis",
    "version": "0.6.0",
    "category": "governance",
    "description": "Analyze performance characteristics.\nThis workflow guides performance investigation, bottleneck identification, and optimization decision-making with explicit tradeoff analysis.\n",
    "phases": [
      {
        "id": "bottleneck_identification",
        "description": "Identify performance bottlenecks",
        "requires": [
          "profiling_data",
          "metrics"
        ],
        "produces": [
          "bottlenecks"
        ],
        "allows_questions": true,
        "risk_level": "medium"
      },
      {
        "id": "optimization_options",
        "description": "Identify possible optimization approaches",
        "requires": [
          "bottlenecks"
        ],
        "produces": [
          "optimization_options"
        ],
        "allows_questions": false,
        "risk_level": "medium"
      },
      {
        "id": "tradeoff_decision",
        "description": "Analyze tradeoffs and decide on approach",
        "requires": [
          "optimization_options"
        ],
        "produces": [
          "optimization_plan"
        ],
        "allows_questions": true,
        "risk_level": "high"
      }
    ],
    "interaction": {
      "default_mode": "question_only",
      "question_policy": {
        "trigger_when": [
          "bottleneck_unclear",
          "multiple_optimization_paths",
          "tradeoff_complexity_high"
        ]
      },
      "allowed_phases": [
        "bottleneck_identification",
        "tradeoff_decision"
      ]
    },
    "constraints": {
      "execution": "forbidden",
      "side_effects": "forbidden",
      "requires_approval": false
    },
    "lineage": {
      "introduced_in": "v0.6",
      "derived_from": null,
      "change_reason": null
    },
    "metadata": {
      "tags": [
        "performance",
        "optimization",
        "analysis"
      ],
      "related_workflows": [
        "code_review",
        "system_design"
      ],
      "use_cases": [
        "Performance degradation investigation",
        "Capacity planning",
        "SLA validation"
      ],
      "anti_use_cases": [
        "Functional bugs",
        "Security issues",
        "Code style improvements"
      ]
    }
  }
}