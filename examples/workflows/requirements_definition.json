  "spec": {
    "id": "requirements_definition",
    "version": "0.6.0",
    "category": "design",
    "description": "Define functional and non-functional requirements.\nThis workflow structures the process of translating a problem statement into concrete, testable requirements with clear acceptance criteria and constraints.\n",
    "phases": [
      {
        "id": "scope_definition",
        "description": "Define the scope and boundaries",
        "requires": [
          "problem_statement"
        ],
        "produces": [
          "scope",
          "boundaries"
        ],
        "allows_questions": true,
        "risk_level": "medium"
      },
      {
        "id": "constraints_capture",
        "description": "Capture all constraints (technical, business, regulatory)",
        "requires": [
          "scope"
        ],
        "produces": [
          "constraints"
        ],
        "allows_questions": true,
        "risk_level": "medium"
      },
      {
        "id": "acceptance_criteria",
        "description": "Define measurable acceptance criteria",
        "requires": [
          "scope",
          "constraints"
        ],
        "produces": [
          "acceptance_criteria"
        ],
        "allows_questions": true,
        "risk_level": "low"
      }
    ],
    "interaction": {
      "default_mode": "question_only",
      "question_policy": {
        "trigger_when": [
          "scope_ambiguity > 0.7",
          "missing_stakeholder_input",
          "conflicting_constraints"
        ]
      },
      "allowed_phases": [
        "scope_definition",
        "constraints_capture",
        "acceptance_criteria"
      ]
    },
    "constraints": {
      "execution": "forbidden",
      "side_effects": "forbidden",
      "requires_approval": false
    },
    "lineage": {
      "introduced_in": "v0.6",
      "derived_from": null,
      "change_reason": null
    },
    "metadata": {
      "tags": [
        "requirements",
        "planning",
        "design"
      ],
      "related_workflows": [
        "problem_discovery",
        "system_design"
      ],
      "use_cases": [
        "Problem is framed but needs concrete requirements",
        "Multiple stakeholders need alignment",
        "Regulatory or compliance requirements exist"
      ],
      "anti_use_cases": [
        "Problem discovery phase (use problem_discovery first)",
        "Implementation details (use detailed_design instead)",
        "Quick prototypes or experiments"
      ]
    }
  }
}