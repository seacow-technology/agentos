  "spec": {
    "id": "testing_strategy",
    "version": "0.6.0",
    "category": "testing",
    "description": "Define test coverage strategy.\nThis workflow establishes what, how, and how much to test. It creates a comprehensive testing plan considering different test types and coverage goals.\n",
    "phases": [
      {
        "id": "test_scope",
        "description": "Define what needs to be tested",
        "requires": [
          "feature",
          "requirements"
        ],
        "produces": [
          "test_scope"
        ],
        "allows_questions": true,
        "risk_level": "medium"
      },
      {
        "id": "test_types",
        "description": "Identify applicable test types (unit, integration, e2e, etc.)",
        "requires": [
          "test_scope"
        ],
        "produces": [
          "test_types",
          "test_pyramid"
        ],
        "allows_questions": false,
        "risk_level": "low"
      },
      {
        "id": "coverage_expectations",
        "description": "Define coverage expectations and critical paths",
        "requires": [
          "test_types"
        ],
        "produces": [
          "coverage_goals",
          "critical_paths"
        ],
        "allows_questions": false,
        "risk_level": "low"
      }
    ],
    "interaction": {
      "default_mode": "question_only",
      "question_policy": {
        "trigger_when": [
          "scope_ambiguity > 0.7",
          "critical_path_unclear"
        ]
      },
      "allowed_phases": [
        "test_scope"
      ]
    },
    "constraints": {
      "execution": "forbidden",
      "side_effects": "forbidden",
      "requires_approval": false
    },
    "lineage": {
      "introduced_in": "v0.6",
      "derived_from": null,
      "change_reason": null
    },
    "metadata": {
      "tags": [
        "testing",
        "quality-assurance",
        "planning"
      ],
      "related_workflows": [
        "test_implementation",
        "feature_implementation"
      ],
      "use_cases": [
        "New feature needs test planning",
        "Multiple test types need coordination",
        "Critical functionality requires coverage strategy"
      ],
      "anti_use_cases": [
        "Writing actual tests (use test_implementation)",
        "Testing strategy already exists",
        "Simple features with obvious test needs"
      ]
    }
  }
}