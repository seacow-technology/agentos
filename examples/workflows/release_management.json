  "spec": {
    "id": "release_management",
    "version": "0.6.0",
    "category": "deployment",
    "description": "Coordinate release activities.\nThis workflow manages the overall release process including scope definition, changelog generation, and release signal monitoring.\n",
    "phases": [
      {
        "id": "release_scope",
        "description": "Define what's included in the release",
        "requires": [
          "features",
          "fixes"
        ],
        "produces": [
          "release_scope"
        ],
        "allows_questions": true,
        "risk_level": "medium"
      },
      {
        "id": "change_log",
        "description": "Generate release notes and changelog",
        "requires": [
          "release_scope",
          "commits"
        ],
        "produces": [
          "changelog",
          "release_notes"
        ],
        "allows_questions": false,
        "risk_level": "low"
      },
      {
        "id": "release_signals",
        "description": "Monitor release signals and metrics",
        "requires": [
          "release_notes",
          "deployment_plan"
        ],
        "produces": [
          "release_checklist"
        ],
        "allows_questions": false,
        "risk_level": "medium"
      }
    ],
    "interaction": {
      "default_mode": "question_only",
      "question_policy": {
        "trigger_when": [
          "scope_conflicts",
          "breaking_changes_present",
          "stakeholder_alignment_needed"
        ]
      },
      "allowed_phases": [
        "release_scope"
      ]
    },
    "constraints": {
      "execution": "forbidden",
      "side_effects": "forbidden",
      "requires_approval": false
    },
    "lineage": {
      "introduced_in": "v0.6",
      "derived_from": null,
      "change_reason": null
    },
    "metadata": {
      "tags": [
        "release",
        "coordination",
        "project-management"
      ],
      "related_workflows": [
        "deployment_planning",
        "code_review"
      ],
      "use_cases": [
        "Version releases",
        "Multi-team coordinated releases",
        "Major feature launches"
      ],
      "anti_use_cases": [
        "Single feature deployments (use deployment_planning)",
        "Hotfix releases",
        "Internal test deployments"
      ]
    }
  }
}