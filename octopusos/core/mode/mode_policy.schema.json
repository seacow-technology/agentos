{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentos.dev/schemas/mode-policy.json",
  "title": "AgentOS Mode Policy Schema",
  "description": "JSON Schema for validating mode policy configuration files",
  "type": "object",
  "required": ["version", "description", "modes", "default_permissions"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Policy file version",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the policy",
      "minLength": 1
    },
    "modes": {
      "type": "object",
      "description": "Mode-specific permissions",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z_]+$": {
          "$ref": "#/definitions/modePermissions"
        }
      },
      "additionalProperties": false
    },
    "default_permissions": {
      "$ref": "#/definitions/modePermissions",
      "description": "Default permissions for modes not explicitly defined"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "modePermissions": {
      "type": "object",
      "description": "Permission settings for a specific mode",
      "required": ["allows_commit", "allows_diff", "allowed_operations", "risk_level"],
      "properties": {
        "allows_commit": {
          "type": "boolean",
          "description": "Whether this mode allows git commits"
        },
        "allows_diff": {
          "type": "boolean",
          "description": "Whether this mode allows git diffs"
        },
        "allowed_operations": {
          "type": "array",
          "description": "List of allowed operations",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["read", "write", "execute"]
          }
        },
        "risk_level": {
          "type": "string",
          "description": "Risk level of operations in this mode",
          "enum": ["safe", "moderate", "high"]
        }
      },
      "additionalProperties": false
    }
  }
}
