{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "agentos://schemas/evaluator/intent_evaluation_result.schema.json",
  "title": "Intent Evaluation Result (v0.9.3)",
  "description": "Result of evaluating a set of intents for conflicts, merging, and risk comparison",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "schema_version",
    "created_at",
    "input",
    "evaluation",
    "constraints",
    "lineage",
    "checksum"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^eval_result_[a-z0-9_]{6,64}$",
      "description": "Unique identifier for this evaluation result"
    },
    "type": {
      "const": "intent_evaluation_result",
      "description": "Type marker for evaluation result"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "const": "0.9.3",
      "description": "Schema version"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Evaluation result creation timestamp"
    },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "required": ["intent_set_id", "intent_checksums"],
      "properties": {
        "intent_set_id": {
          "type": "string",
          "pattern": "^intent_set_[a-z0-9_]{6,64}$",
          "description": "Reference to input intent set"
        },
        "intent_checksums": {
          "type": "object",
          "description": "Checksums of evaluated intents",
          "additionalProperties": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "minProperties": 2
        }
      }
    },
    "evaluation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["conflicts", "merge_plan", "risk_comparison"],
      "properties": {
        "conflicts": {
          "type": "array",
          "description": "Detected conflicts between intents",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["conflict_id", "type", "severity", "intent_ids", "evidence_refs"],
            "properties": {
              "conflict_id": {
                "type": "string",
                "pattern": "^conflict_[a-z0-9_]{6,32}$",
                "description": "Unique conflict identifier"
              },
              "type": {
                "type": "string",
                "enum": ["resource_conflict", "effect_conflict", "order_conflict", "constraint_conflict"],
                "description": "Type of conflict"
              },
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"],
                "description": "Conflict severity"
              },
              "intent_ids": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^intent_[a-z0-9_]{6,64}$"
                },
                "minItems": 2,
                "description": "Intents involved in conflict"
              },
              "resource_ref": {
                "type": "string",
                "maxLength": 512,
                "description": "Reference to conflicting resource"
              },
              "description": {
                "type": "string",
                "maxLength": 1000,
                "description": "Description of the conflict"
              },
              "evidence_refs": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 512
                },
                "minItems": 1,
                "maxItems": 50,
                "description": "Evidence supporting conflict detection"
              },
              "resolutions": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["merge_union", "override_by_priority", "reject", "manual_resolution"]
                },
                "description": "Possible resolutions for this conflict"
              }
            }
          }
        },
        "merge_plan": {
          "type": "object",
          "description": "Plan for merging or resolving conflicts",
          "additionalProperties": false,
          "required": ["strategy", "operations"],
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["merge_union", "override_by_priority", "reject", "no_merge_needed"],
              "description": "Overall merge strategy"
            },
            "operations": {
              "type": "array",
              "description": "Sequence of merge operations",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["op_id", "operation", "source_intent_id", "evidence"],
                "properties": {
                  "op_id": {
                    "type": "string",
                    "pattern": "^op_[a-z0-9_]{4,32}$"
                  },
                  "operation": {
                    "type": "string",
                    "enum": ["union_commands", "union_workflows", "override_field", "keep_field", "reject"]
                  },
                  "source_intent_id": {
                    "type": "string",
                    "pattern": "^intent_[a-z0-9_]{6,64}$"
                  },
                  "target_field": {
                    "type": "string",
                    "maxLength": 256
                  },
                  "evidence": {
                    "type": "string",
                    "maxLength": 500
                  }
                }
              }
            },
            "result_intent_id": {
              "type": "string",
              "pattern": "^intent_[a-z0-9_]{6,64}$",
              "description": "ID of merged/resulting intent (if applicable)"
            }
          }
        },
        "risk_comparison": {
          "type": "object",
          "description": "Risk comparison across intents",
          "additionalProperties": false,
          "required": ["matrix", "dominance"],
          "properties": {
            "matrix": {
              "type": "array",
              "description": "Risk assessment matrix",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["intent_id", "overall_risk", "dimensions"],
                "properties": {
                  "intent_id": {
                    "type": "string",
                    "pattern": "^intent_[a-z0-9_]{6,64}$"
                  },
                  "overall_risk": {
                    "type": "string",
                    "enum": ["low", "medium", "high", "critical"]
                  },
                  "dimensions": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "effects_risk": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                      },
                      "scope_risk": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                      },
                      "blast_radius": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                      },
                      "unknowns": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100
                      }
                    }
                  }
                }
              }
            },
            "dominance": {
              "type": "array",
              "description": "Risk dominance relationships",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["intent_a", "intent_b", "relationship"],
                "properties": {
                  "intent_a": {
                    "type": "string",
                    "pattern": "^intent_[a-z0-9_]{6,64}$"
                  },
                  "intent_b": {
                    "type": "string",
                    "pattern": "^intent_[a-z0-9_]{6,64}$"
                  },
                  "relationship": {
                    "type": "string",
                    "enum": ["A_dominates_B", "B_dominates_A", "incomparable"]
                  }
                }
              }
            },
            "incomparable": {
              "type": "array",
              "description": "Intent pairs that cannot be compared",
              "items": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^intent_[a-z0-9_]{6,64}$"
                },
                "minItems": 2,
                "maxItems": 2
              }
            }
          }
        }
      }
    },
    "requires_questions": {
      "type": "array",
      "description": "Questions requiring user input",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["question_id", "condition", "reason", "options"],
        "properties": {
          "question_id": {
            "type": "string",
            "pattern": "^question_[a-z0-9_]{4,32}$"
          },
          "condition": {
            "type": "string",
            "maxLength": 500,
            "description": "Condition that triggered this question"
          },
          "reason": {
            "type": "string",
            "maxLength": 1000,
            "description": "Reason this question is needed"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["option_id", "label"],
              "properties": {
                "option_id": {
                  "type": "string",
                  "pattern": "^option_[a-z0-9_]{4,16}$"
                },
                "label": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 200
                },
                "implications": {
                  "type": "string",
                  "maxLength": 500
                }
              }
            },
            "minItems": 2
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "Red line constraints",
      "additionalProperties": false,
      "required": ["execution"],
      "properties": {
        "execution": {
          "const": "forbidden",
          "description": "RL-E1: Evaluator produces no executable payload"
        }
      }
    },
    "lineage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["derived_from_intent_set", "evaluator_version"],
      "properties": {
        "derived_from_intent_set": {
          "type": "string",
          "pattern": "^intent_set_[a-z0-9_]{6,64}$",
          "description": "Source intent set"
        },
        "intent_set_checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "Checksum of source intent set"
        },
        "evaluator_version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
          "description": "Evaluator engine version"
        }
      }
    },
    "checksum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 checksum of evaluation result"
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata",
      "properties": {
        "evaluation_duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "evaluator_mode": {
          "type": "string",
          "enum": ["automatic", "semi_automatic", "manual"]
        }
      }
    }
  }
}
