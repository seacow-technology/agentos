{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "agentos://schemas/evaluator/intent_set.schema.json",
  "title": "Intent Set (v0.9.3)",
  "description": "Collection of Execution Intents for evaluation by the Intent Evaluator",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "schema_version",
    "created_at",
    "intent_ids",
    "context",
    "lineage",
    "checksum"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^intent_set_[a-z0-9_]{6,64}$",
      "description": "Unique identifier for this intent set"
    },
    "type": {
      "const": "intent_set",
      "description": "Type marker for intent set"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "const": "0.9.3",
      "description": "Schema version"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Intent set creation timestamp"
    },
    "intent_ids": {
      "type": "array",
      "description": "Array of Intent IDs to evaluate",
      "minItems": 2,
      "maxItems": 20,
      "items": {
        "type": "string",
        "pattern": "^intent_[a-z0-9_]{6,64}$"
      },
      "uniqueItems": true
    },
    "context": {
      "type": "object",
      "description": "Evaluation context",
      "additionalProperties": false,
      "required": ["project_id", "env"],
      "properties": {
        "project_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "description": "Project identifier"
        },
        "env": {
          "type": "string",
          "enum": ["local", "dev", "staging", "prod"],
          "description": "Environment context"
        },
        "time_window": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "start": {
              "type": "string",
              "format": "date-time"
            },
            "end": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "maxItems": 20
        }
      }
    },
    "lineage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["introduced_in", "derived_from"],
      "properties": {
        "introduced_in": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
          "description": "Version when this intent set was introduced"
        },
        "derived_from": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^intent_set_[a-z0-9_]{6,64}$"
          },
          "maxItems": 16,
          "description": "Previous intent sets this was derived from"
        }
      }
    },
    "checksum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 checksum of intent_ids + context"
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata",
      "properties": {
        "created_by": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "purpose": {
          "type": "string",
          "maxLength": 500
        }
      }
    }
  }
}
