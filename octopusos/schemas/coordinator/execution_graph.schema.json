{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "agentos://schemas/coordinator/execution_graph.schema.json",
  "title": "Execution Graph (v0.9.2)",
  "description": "Directed acyclic graph representing the execution plan derived from an Intent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "graph_id",
    "schema_version",
    "intent_id",
    "created_at",
    "nodes",
    "edges",
    "swimlanes",
    "lineage",
    "checksum"
  ],
  "properties": {
    "graph_id": {
      "type": "string",
      "pattern": "^graph_[a-z0-9_]{6,64}$",
      "description": "Unique identifier for this execution graph"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "const": "0.9.2",
      "description": "Schema version"
    },
    "intent_id": {
      "type": "string",
      "pattern": "^intent_[a-z0-9_]{6,64}$",
      "description": "Reference to the source Execution Intent (v0.9.1)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Graph creation timestamp"
    },
    "nodes": {
      "type": "array",
      "description": "Graph nodes representing phases, actions, decisions, questions, and reviews",
      "minItems": 1,
      "maxItems": 200,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["node_id", "node_type", "label"],
        "properties": {
          "node_id": {
            "type": "string",
            "pattern": "^node_[a-z0-9_]{4,32}$",
            "description": "Unique node identifier within this graph"
          },
          "node_type": {
            "type": "string",
            "enum": ["phase", "action_proposal", "decision_point", "question", "review_gate"],
            "description": "Type of node"
          },
          "label": {
            "type": "string",
            "minLength": 1,
            "maxLength": 160,
            "description": "Human-readable label for this node"
          },
          "description": {
            "type": "string",
            "maxLength": 1000,
            "description": "Detailed description of this node's purpose"
          },
          "phase_ref": {
            "type": "string",
            "description": "Reference to workflow phase (for phase nodes)"
          },
          "command_ref": {
            "type": "string",
            "description": "Reference to command from registry (for action_proposal nodes)"
          },
          "effects": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["read", "write", "deploy", "delete", "configure"]
            },
            "description": "Effects of this action (for action_proposal nodes)"
          },
          "risk_level": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "description": "Risk level (for action_proposal nodes)"
          },
          "evidence_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            },
            "description": "Evidence supporting this node (required for action_proposal)"
          },
          "rule_refs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Rules applied at this decision point (for decision_point nodes)"
          },
          "question_ref": {
            "type": "string",
            "description": "Reference to question in QuestionPack (for question nodes)"
          },
          "review_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Review criteria (for review_gate nodes)"
          },
          "metadata": {
            "type": "object",
            "description": "Additional node metadata"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "node_type": {
                  "const": "action_proposal"
                }
              }
            },
            "then": {
              "required": ["effects", "risk_level", "evidence_refs"]
            }
          },
          {
            "if": {
              "properties": {
                "node_type": {
                  "const": "decision_point"
                }
              }
            },
            "then": {
              "required": ["rule_refs"]
            }
          }
        ]
      }
    },
    "edges": {
      "type": "array",
      "description": "Directed edges representing dependencies and execution order",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["edge_id", "from_node", "to_node", "edge_type"],
        "properties": {
          "edge_id": {
            "type": "string",
            "pattern": "^edge_[a-z0-9_]{4,32}$",
            "description": "Unique edge identifier"
          },
          "from_node": {
            "type": "string",
            "pattern": "^node_[a-z0-9_]{4,32}$",
            "description": "Source node ID"
          },
          "to_node": {
            "type": "string",
            "pattern": "^node_[a-z0-9_]{4,32}$",
            "description": "Target node ID"
          },
          "edge_type": {
            "type": "string",
            "enum": ["sequential", "parallel", "conditional", "fallback"],
            "description": "Type of dependency"
          },
          "condition": {
            "type": "string",
            "maxLength": 500,
            "description": "Condition for conditional edges"
          },
          "label": {
            "type": "string",
            "maxLength": 100,
            "description": "Optional edge label"
          }
        }
      }
    },
    "swimlanes": {
      "type": "array",
      "description": "Agent role swimlanes showing responsibility mapping",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["swimlane_id", "agent_id", "role", "node_refs"],
        "properties": {
          "swimlane_id": {
            "type": "string",
            "pattern": "^swimlane_[a-z0-9_]{4,32}$",
            "description": "Unique swimlane identifier"
          },
          "agent_id": {
            "type": "string",
            "description": "Reference to agent from registry"
          },
          "role": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Role name for this agent"
          },
          "node_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^node_[a-z0-9_]{4,32}$"
            },
            "description": "Nodes assigned to this agent"
          }
        }
      }
    },
    "lineage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["derived_from_intent", "registry_versions", "coordinator_version"],
      "properties": {
        "derived_from_intent": {
          "type": "string",
          "pattern": "^intent_[a-z0-9_]{6,64}$",
          "description": "Source intent ID"
        },
        "intent_checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 checksum of source intent"
        },
        "registry_versions": {
          "type": "object",
          "description": "Versions of referenced registry content",
          "properties": {
            "workflows": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "agents": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "commands": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "rules": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        },
        "coordinator_version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
          "description": "Coordinator engine version used"
        }
      }
    },
    "checksum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 checksum of graph structure (nodes + edges + swimlanes)"
    },
    "metadata": {
      "type": "object",
      "description": "Additional graph metadata",
      "properties": {
        "execution_policy": {
          "type": "string",
          "enum": ["interactive", "semi_auto", "full_auto"],
          "description": "Execution policy used"
        },
        "estimated_duration": {
          "type": "string",
          "description": "Estimated execution duration (human-readable)"
        },
        "complexity_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Graph complexity score (0-100)"
        }
      }
    }
  }
}
