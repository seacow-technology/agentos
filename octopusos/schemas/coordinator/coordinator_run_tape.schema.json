{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "agentos://schemas/coordinator/coordinator_run_tape.schema.json",
  "title": "Coordinator Run Tape (v0.9.2)",
  "description": "Complete replay tape of a Coordinator execution for audit and debugging",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "schema_version",
    "intent_id",
    "coordinator_version",
    "started_at",
    "states",
    "decisions"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "pattern": "^coord_run_[a-z0-9_]{6,64}$",
      "description": "Unique identifier for this coordinator run"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "const": "0.9.2",
      "description": "Schema version"
    },
    "intent_id": {
      "type": "string",
      "pattern": "^intent_[a-z0-9_]{6,64}$",
      "description": "Input intent ID"
    },
    "coordinator_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "description": "Coordinator engine version"
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "Run start timestamp"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "Run completion timestamp"
    },
    "final_state": {
      "type": "string",
      "enum": [
        "RECEIVED",
        "PRECHECKED",
        "CONTEXT_BUILT",
        "RULES_EVALUATED",
        "GRAPH_DRAFTED",
        "QUESTIONS_EMITTED",
        "AWAITING_ANSWERS",
        "GRAPH_FINALIZED",
        "REVIEW_PACK_BUILT",
        "FROZEN_OUTPUTS",
        "DONE",
        "BLOCKED",
        "ABORTED"
      ],
      "description": "Final state reached"
    },
    "states": {
      "type": "array",
      "description": "State transition history",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["sequence", "from_state", "to_state", "timestamp", "trigger"],
        "properties": {
          "sequence": {
            "type": "integer",
            "minimum": 1,
            "description": "Sequence number of this transition"
          },
          "from_state": {
            "type": "string",
            "enum": [
              "INIT",
              "RECEIVED",
              "PRECHECKED",
              "CONTEXT_BUILT",
              "RULES_EVALUATED",
              "GRAPH_DRAFTED",
              "QUESTIONS_EMITTED",
              "AWAITING_ANSWERS",
              "GRAPH_FINALIZED",
              "REVIEW_PACK_BUILT",
              "FROZEN_OUTPUTS"
            ],
            "description": "Source state"
          },
          "to_state": {
            "type": "string",
            "enum": [
              "RECEIVED",
              "PRECHECKED",
              "CONTEXT_BUILT",
              "RULES_EVALUATED",
              "GRAPH_DRAFTED",
              "QUESTIONS_EMITTED",
              "AWAITING_ANSWERS",
              "GRAPH_FINALIZED",
              "REVIEW_PACK_BUILT",
              "FROZEN_OUTPUTS",
              "DONE",
              "BLOCKED",
              "ABORTED"
            ],
            "description": "Target state"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Transition timestamp"
          },
          "trigger": {
            "type": "string",
            "maxLength": 500,
            "description": "What triggered this transition"
          },
          "guards_evaluated": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["guard_name", "passed", "reason"],
              "properties": {
                "guard_name": {
                  "type": "string",
                  "maxLength": 100,
                  "description": "Name of guard condition"
                },
                "passed": {
                  "type": "boolean",
                  "description": "Whether guard passed"
                },
                "reason": {
                  "type": "string",
                  "maxLength": 1000,
                  "description": "Evaluation reason"
                },
                "evidence_refs": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Evidence used in evaluation"
                }
              }
            },
            "description": "Guard conditions evaluated for this transition"
          },
          "outputs_produced": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["artifact_type", "artifact_id"],
              "properties": {
                "artifact_type": {
                  "type": "string",
                  "enum": ["precheck_report", "context_bundle", "rule_decisions", "execution_graph", "question_pack", "review_pack", "frozen_outputs"],
                  "description": "Type of artifact produced"
                },
                "artifact_id": {
                  "type": "string",
                  "description": "Identifier of produced artifact"
                },
                "checksum": {
                  "type": "string",
                  "pattern": "^[a-f0-9]{64}$",
                  "description": "SHA-256 checksum of artifact"
                }
              }
            },
            "description": "Artifacts produced during this state"
          },
          "duration_ms": {
            "type": "integer",
            "minimum": 0,
            "description": "Duration in milliseconds"
          }
        }
      }
    },
    "decisions": {
      "type": "array",
      "description": "Decision log for audit trail",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["decision_id", "decision_type", "timestamp", "rationale"],
        "properties": {
          "decision_id": {
            "type": "string",
            "pattern": "^decision_[a-z0-9_]{6,32}$",
            "description": "Unique decision identifier"
          },
          "decision_type": {
            "type": "string",
            "enum": [
              "rule_adjudication",
              "model_routing",
              "question_emission",
              "graph_building",
              "risk_assessment",
              "policy_check"
            ],
            "description": "Type of decision"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When decision was made"
          },
          "inputs": {
            "type": "object",
            "description": "Inputs used for this decision",
            "properties": {
              "evidence_refs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "context_refs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "rule_refs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "rationale": {
            "type": "string",
            "minLength": 1,
            "maxLength": 4000,
            "description": "Explanation of why this decision was made"
          },
          "outcome": {
            "type": "string",
            "maxLength": 1000,
            "description": "Result of this decision"
          },
          "alternatives_considered": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "alternative": {
                  "type": "string"
                },
                "reason_rejected": {
                  "type": "string"
                }
              }
            },
            "description": "Alternative options that were considered and rejected"
          }
        }
      }
    },
    "rule_evaluations": {
      "type": "array",
      "description": "Rule adjudication records",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["evaluation_id", "rule_id", "decision", "timestamp"],
        "properties": {
          "evaluation_id": {
            "type": "string",
            "pattern": "^eval_[a-z0-9_]{6,32}$",
            "description": "Unique evaluation identifier"
          },
          "rule_id": {
            "type": "string",
            "description": "Rule being evaluated"
          },
          "decision": {
            "type": "string",
            "enum": ["allow", "deny", "warn", "require_review"],
            "description": "Rule decision"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Evaluation timestamp"
          },
          "target": {
            "type": "string",
            "description": "What was being evaluated (action, phase, etc.)"
          },
          "evidence_used": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Evidence used in rule evaluation"
          },
          "reason": {
            "type": "string",
            "maxLength": 2000,
            "description": "Reason for this decision"
          }
        }
      }
    },
    "model_routing_decisions": {
      "type": "array",
      "description": "Model selection decisions",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["decision_id", "task_type", "model_selected", "timestamp"],
        "properties": {
          "decision_id": {
            "type": "string",
            "pattern": "^model_decision_[a-z0-9_]{6,32}$",
            "description": "Unique decision identifier"
          },
          "task_type": {
            "type": "string",
            "maxLength": 100,
            "description": "Type of task requiring a model"
          },
          "model_selected": {
            "type": "string",
            "maxLength": 100,
            "description": "Model that was selected"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Selection timestamp"
          },
          "reason": {
            "type": "string",
            "maxLength": 2000,
            "description": "Why this model was selected"
          },
          "cost_estimate": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated cost in USD"
          },
          "budget_remaining": {
            "type": "number",
            "minimum": 0,
            "description": "Remaining budget after this selection"
          },
          "data_sensitivity": {
            "type": "string",
            "enum": ["public", "internal", "confidential", "restricted"],
            "description": "Data sensitivity level"
          },
          "fallback_available": {
            "type": "boolean",
            "description": "Whether fallback model is available"
          }
        }
      }
    },
    "failure_info": {
      "type": "object",
      "description": "Failure information if run ended in BLOCKED or ABORTED",
      "properties": {
        "failure_type": {
          "type": "string",
          "enum": ["constraint_violation", "missing_registry", "rule_denied", "red_line_violation", "policy_violation"],
          "description": "Type of failure"
        },
        "failure_message": {
          "type": "string",
          "maxLength": 4000,
          "description": "Detailed failure message"
        },
        "failed_at_state": {
          "type": "string",
          "description": "State where failure occurred"
        },
        "recovery_suggestions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Suggestions for recovery"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional run metadata",
      "properties": {
        "total_duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Total run duration"
        },
        "state_transitions_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of state transitions"
        },
        "decisions_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of decisions made"
        }
      }
    }
  }
}
