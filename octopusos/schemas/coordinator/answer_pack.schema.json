{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "agentos://schemas/coordinator/answer_pack.schema.json",
  "title": "Answer Pack (v0.9.2)",
  "description": "Structured answers to questions in a QuestionPack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "pack_id",
    "schema_version",
    "question_pack_id",
    "answers",
    "provided_at"
  ],
  "properties": {
    "pack_id": {
      "type": "string",
      "pattern": "^apack_[a-z0-9_]{6,64}$",
      "description": "Unique identifier for this answer pack"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "const": "0.9.2",
      "description": "Schema version"
    },
    "question_pack_id": {
      "type": "string",
      "pattern": "^qpack_[a-z0-9_]{6,64}$",
      "description": "Reference to the question pack being answered"
    },
    "answers": {
      "type": "array",
      "description": "Array of answers corresponding to questions",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "question_id",
          "answer_type",
          "answer_text",
          "provided_at",
          "provided_by"
        ],
        "properties": {
          "question_id": {
            "type": "string",
            "pattern": "^q_[a-z0-9_]{4,32}$",
            "description": "Reference to question being answered"
          },
          "answer_type": {
            "type": "string",
            "enum": ["text", "choice", "structured", "fallback"],
            "description": "Type of answer provided"
          },
          "answer_text": {
            "type": "string",
            "minLength": 1,
            "maxLength": 10000,
            "description": "The actual answer content"
          },
          "answer_data": {
            "type": "object",
            "description": "Structured answer data (for structured type)"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence level (0-1) if applicable"
          },
          "provided_at": {
            "type": "string",
            "format": "date-time",
            "description": "When this answer was provided"
          },
          "provided_by": {
            "type": "string",
            "enum": ["human", "fallback", "policy_default"],
            "description": "Source of the answer"
          },
          "rationale": {
            "type": "string",
            "maxLength": 2000,
            "description": "Optional rationale for this answer"
          }
        }
      }
    },
    "provided_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this answer pack was provided"
    },
    "completeness": {
      "type": "object",
      "description": "Tracking of answer completeness",
      "properties": {
        "total_questions": {
          "type": "integer",
          "minimum": 0,
          "description": "Total questions in the pack"
        },
        "answered": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of questions answered"
        },
        "unanswered_question_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^q_[a-z0-9_]{4,32}$"
          },
          "description": "IDs of unanswered questions"
        },
        "fallback_used": {
          "type": "boolean",
          "description": "Whether fallback strategies were used"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional answer pack metadata",
      "properties": {
        "answerer_id": {
          "type": "string",
          "description": "Identifier of who provided answers"
        },
        "session_id": {
          "type": "string",
          "description": "Session identifier if applicable"
        }
      }
    }
  }
}
