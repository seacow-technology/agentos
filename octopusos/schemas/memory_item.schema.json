{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentos.dev/schemas/memory_item.schema.json",
  "$version": "2.0.0",
  "title": "MemoryItem",
  "description": "Single memory item stored in external memory service (v2.0: adds retention policy, decay tracking)",
  "type": "object",
  "required": [
    "schema_version",
    "id",
    "scope",
    "type",
    "content",
    "created_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "MemoryItem schema version (semver)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "enum": ["1.0.0", "2.0.0"]
    },
    "id": {
      "type": "string",
      "description": "Unique memory item identifier (e.g., mem-001)",
      "pattern": "^mem-[a-z0-9]+$"
    },
    "scope": {
      "type": "string",
      "enum": ["global", "project", "repo", "task", "agent"],
      "description": "Memory scope (visibility level)"
    },
    "type": {
      "type": "string",
      "enum": ["decision", "convention", "constraint", "known_issue", "playbook", "glossary"],
      "description": "Memory type"
    },
    "content": {
      "type": "object",
      "description": "Memory content (structure varies by type)",
      "required": ["summary"],
      "properties": {
        "summary": {
          "type": "string",
          "description": "Brief summary of the memory"
        },
        "details": {
          "type": "string",
          "description": "Detailed information"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Example usages or references"
        }
      },
      "additionalProperties": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorization and search"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Evidence sources (e.g., file:path/to/file.ts:123, commit:abc123, ev001)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence score (0.0 to 1.0)"
    },
    "project_id": {
      "type": "string",
      "description": "Associated project ID (for project/repo/task/agent scopes)"
    },
    "last_used_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last time this memory was used in build_context (v2.0+)"
    },
    "use_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of times this memory has been used (v2.0+)"
    },
    "retention_policy": {
      "type": "object",
      "description": "Memory retention and lifecycle policy (v2.0+)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["temporary", "project", "permanent"],
          "description": "Retention type: temporary (7d), project (until project ends), permanent (no expiry)"
        },
        "expires_at": {
          "type": "string",
          "format": "date-time",
          "description": "Expiration timestamp (null for permanent)"
        },
        "auto_cleanup": {
          "type": "boolean",
          "description": "Whether to automatically delete when expired"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "author": {
          "type": "string",
          "description": "Creator (human or agent)"
        },
        "reviewed_by": {
          "type": "string",
          "description": "Reviewer (if applicable)"
        }
      },
      "additionalProperties": true
    }
  }
}
