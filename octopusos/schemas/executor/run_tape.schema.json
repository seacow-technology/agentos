{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "agentos://schemas/executor/run_tape.schema.json",
  "title": "Run Tape (v0.11.1)",
  "description": "Event stream for execution audit trail (JSONL format)",
  "type": "object",
  "required": ["event_id", "timestamp", "event_type"],
  "properties": {
    "event_id": {"type": "string"},
    "timestamp": {"type": "string", "format": "date-time"},
    "event_type": {"type": "string", "enum": ["operation_start", "operation_end", "error", "rollback"]},
    "operation_id": {"type": "string"},
    "details": {"type": "object"},
    "stdout_summary": {"type": "string", "maxLength": 1000},
    "stderr_summary": {"type": "string", "maxLength": 1000}
  }
}
