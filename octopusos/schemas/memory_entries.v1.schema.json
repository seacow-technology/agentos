{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://octopusos.dev/schemas/memory_entries.v1.schema.json",
  "title": "Memory Entries Response v1",
  "type": "object",
  "required": ["entries", "total", "limit", "offset", "source"],
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["content", "tags", "sources"],
        "properties": {
          "id": { "type": ["string", "null"] },
          "scope": { "type": ["string", "null"] },
          "type": { "type": ["string", "null"] },
          "content": { "type": "object" },
          "tags": { "type": "array" },
          "sources": { "type": "array" },
          "confidence": { "type": ["number", "null"] },
          "project_id": { "type": ["string", "null"] },
          "created_at": { "type": ["string", "null"] },
          "updated_at": { "type": ["string", "null"] }
        },
        "additionalProperties": true
      }
    },
    "total": { "type": "integer", "minimum": 0 },
    "limit": { "type": "integer", "minimum": 1 },
    "offset": { "type": "integer", "minimum": 0 },
    "source": { "type": "string", "const": "compat" },
    "store_path": { "type": ["string", "null"] }
  },
  "additionalProperties": true
}

