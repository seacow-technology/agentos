{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$version": "1.0.0",
  "title": "RunTape",
  "description": "Complete execution tape for replay",
  "type": "object",
  "required": [
    "run_id",
    "steps"
  ],
  "properties": {
    "run_id": {
      "type": "integer"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step_type": {
            "type": "string"
          },
          "inputs": {
            "type": "object"
          },
          "outputs": {
            "type": "object"
          },
          "commands": {
            "type": "array"
          },
          "diff_hash": {
            "type": "string"
          },
          "commit_hash": {
            "type": "string"
          },
          "lock_events": {
            "type": "array"
          }
        }
      }
    }
  }
}